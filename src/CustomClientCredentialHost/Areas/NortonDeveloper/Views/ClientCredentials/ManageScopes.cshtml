@model CustomClientCredentialHost.Areas.NortonDeveloper.Controllers.ClientScopeModel

@{
    ViewBag.Title = "Manage Client Scopes";
}

@using (Html.BeginForm("ManageScopes", "ClientCredentials", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Manage Scopes for @Model.ClientId</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.ClientId, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ClientId, new
            {
                style = "width: 300px;border: none;background-color: #fff;background: transparent;",
                @class = "form-control",
                @readonly = "readonly"
            })
        </div>
    </div>

    <h1>User Scopes</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Scope</th>
                <th>Enabled</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.UserScopes.Count; ++i)
            {
                <tr>

                    <td>
                        @Html.TextBoxFor(m => m.UserScopes[i].Name, new
                        {
                            style = "width: 300px;border: none;background-color: #fff;background: transparent;",
                            @class = "form-control",
                            @readonly = "readonly"
                        })
                    </td>
                    <td>
                        @Html.CheckBoxFor(m => m.UserScopes[i].Enabled, new { @class = "form-control" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h1>Allowed Scopes</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Scope</th>
                <th>Enabled</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.AllowedScopes.Count; ++i)
            {
                <tr>
                    <td>
                        @Html.TextBoxFor(m => m.AllowedScopes[i].Name, new
                        {
                            style = "width: 300px;border: none;background-color: #fff;background: transparent;",
                            @class = "form-control",
                            @readonly = "readonly"
                        })
                    </td>
                    <td>
                        @Html.CheckBoxFor(m => m.AllowedScopes[i].Enabled, new { @class = "form-control" })
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
            @Html.ActionLink("Cancel", "Index", "ClientCredentials", new { @class = "btn btn-default" })

        </div>
    </div>


}
