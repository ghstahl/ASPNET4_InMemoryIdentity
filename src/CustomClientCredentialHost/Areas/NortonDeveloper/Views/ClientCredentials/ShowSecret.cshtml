@model CustomClientCredentialHost.Areas.NortonDeveloper.Models.ShowSecretViewModel

@{
    ViewBag.Title = "Norton Developer - Show Client Secret";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ShowSecret", "ClientCredentials", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new Client Secret.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Hash, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Hash, new
            {
                style = "width: 300px;border: none;background-color: #fff;background: transparent;",
                @class = "form-control",
                @readonly = "readonly"
            })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OpenSecret, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OpenSecret, new
            {
                style = "width: 300px;border: none;background-color: #fff;background: transparent;",
                @class = "form-control",
                @readonly = "readonly"
            })
        </div>
    </div>
    <div>
        The passcode is used to decrypt and show you your client secret.  It is never stored, so don't lose it!
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PassCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PassCode, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit"/>
        </div>
        @Html.ActionLink("Back", "Index", "ClientCredentials", new { @class = "btn btn-default" })


    </div>
}
