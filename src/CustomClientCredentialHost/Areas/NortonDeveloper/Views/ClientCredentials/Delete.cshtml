@model CustomClientCredentialHost.Areas.NortonDeveloper.Models.ClientViewModel

@{
    ViewBag.Title = "Norton Developer - Delete Client";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Delete", "ClientCredentials", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Are you sure you want to delete this client?</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ClientId, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ClientId, new
            {
                style = "width: 300px;border: none;background-color: #fff;background: transparent;",
                @class = "form-control",
                @readonly = "readonly"
            })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ClientName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ClientName, new
            {
                style = "width: 300px;border: none;background-color: #fff;background: transparent;",
                @class = "form-control",
                @readonly = "readonly"
            })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span>
                <input type="submit" class="btn btn-default" value="Delete" />
                @Html.ActionLink("Cancel", "Index", "ClientCredentials", new { @class = "btn btn-default" })
            </span>
        </div>
    </div>
}