@model IdentityServer3.Core.Models.Scope

@{
    ViewBag.Title = "Delete Scope";
}

@using (Html.BeginForm("Delete", "Scope", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Are you sure you want to delete this scope.</h4>
    <hr/>
    <table class="table">

        <thead>
            <tr>
                <th>Name</th>
                <th>DisplayName</th>
                <th>Type</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.DisplayName</td>
                <td>@Model.Type</td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-0 col-md-10">
            <input type="submit" class="btn btn-default" value="Delete" />
        </div>
    </div>
}
